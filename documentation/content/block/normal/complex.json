{
    // The item group this block's item will be displayed in.
    "item_group": "almura:barrel",
    // The map colour name.
    "map_color": "minecraft:dirt",
    // The material name.
    "material": "minecraft:ground",
    // A map of block states.
    "state": {
        // A block state is identified by a unique name.
        "normal": {
            // The axix-aligned bounding boxes of this block state.
            //
            // If only shape is provided, the collision and wireframe will be determined based off of it.
            "aabb": {
                // The shape.
                // This field is not required, but is not nullable.
                "shape": {
                    "min": [ 0.0, 0.0, 0.0 ],
                    "max": [ 1.0, 1.0, 1.0 ]
                },
                // The collision box.
                // This field is not required and may be manually set to `null` to remove the collision box.
                "collision": {
                    "min": [ 0.0, 0.0, 0.0 ],
                    "max": [ 1.0, 1.0, 1.0 ]
                },
                // The wireframe.
                // This field is not required, but is not nullable.
                "wireframe": {
                    "min": [ 0.0, 0.0, 0.0 ],
                    "max": [ 1.0, 1.0, 1.0 ]
                }
            },
            // The hardness.
            "hardness": 0.5,
            // The light.
            "light": {
                "emission": 0.1,
                "opacity": 1
            },
            // The resistance
            "resistance": 10.0,
            // You can specify either a reference to an block sound group, or define the group here in whole.
            "sound": {
                "volume": 1.0,
                "pitch": 1.0,
                "sound": {
                    "break": "minecraft:block.wood.break",
                    "step": "minecraft:block.wood.step",
                    "place": "minecraft:block.wood.place",
                    "hit": "minecraft:block.wood.hit",
                    "fall": "minecraft:block.wood.fall"
                }
            }
        }
    }
}
